<h1><%= @restaurant.category %> <%= @restaurant.name %></h1>

<p><%= @restaurant.address %></p>
<br>
<p>Phone number: <%= @restaurant.phone_number %></p>

<hr>

<% @reviews.each do |review| %>
  <p><%= "⭐️" * review.rating %> <%= review.content %></p>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.label :rating %>
  <%= f.select :rating, Review::RATINGS, prompt: true %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>


<%= link_to "Back to the list", root_path %>
